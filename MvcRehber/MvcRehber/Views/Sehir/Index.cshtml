@model IEnumerable<MvcRehber.Models.Entities.Sehir>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Şehirler</h2>

<p>
    @Html.ActionLink("Yeni Şehir ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SehirAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlakaKodu)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SehirAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlakaKodu)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.Id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
