<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Rehber", "Index", "Kisi", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">

                @if (Session["UsernameSS"] != null)
                {
                    <ul class="navbar-nav flex-grow-1">
                        <li>@Html.ActionLink("Kisiler", "Index", "Kisi", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Sehirler", "Index", "Sehir", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                }
                <ul class="nav navbar-nav" style="float: right !important;">
                    @if (Session["UsernameSS"] != null)
                    {
                        <li><p style="color: #ff6a00; margin-top: 18px;">Hoş geldiniz <span style="color:#ffffff">@Session["UsernameSS"]   </span></p></li>
                        <li>@Html.ActionLink("Oturumu kapatma", "Logout", "TBLUserInfo", new { area = "" }, new { @class = "nav-link", style = "color:gray; margin-top:10px;" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Kaydol", "Signup", "TBLUserInfo", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Oturum aç", "Login", "TBLUserInfo", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @* Başarılı olursa bu şekilde mesaj bastırılır *@
        @if (TempData["BasariliMesaj"] != null)
        {
            <div class="alert alert-success">
                @TempData["BasariliMesaj"]
            </div>
        }

        @* Hatalı olursa bu şekilde mesaj bastırılır *@
        @if (TempData["HataliMesaj"] != null)
        {
            <div class="alert alert-danger">
                @TempData["HataliMesaj"]
            </div>
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - HAET Contact Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
